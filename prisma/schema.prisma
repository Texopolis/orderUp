generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Master {
  id    Int      @id @unique @default(0)
  items String[]
}

model Daily {
  id    String        @id 
  items ListItem[]
}

model ListItem {
  id      Int    @id @default(autoincrement())
  name    String
  amount  String
  dailyId String?
  Daily   Daily? @relation(fields: [dailyId], references: [id])
}
